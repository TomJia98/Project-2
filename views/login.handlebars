<div class='column'>
  <h2 class='title pb-4'>login:</h2><hr />
  <form class='login-form' method="post" action="/api/users/login">
    <div>
      <label class='user-pw-text' for='user-login'>monkey name:</label>
      <input type='text' id='user-login' name='username'/>
    </div>
    <div>
      <label class='user-pw-text' for='password-login'>password:</label>
      <input type='password' id='password-login' name='password'/>
    </div>
    <div>
      <button type='submit' class='button is-primary'>login</button>
      <a href='/signup'><button
          type='button'
          class='button is-danger'
        >signup</button></a>
    </div>
  </form>
  <p>{{message}}</p>
</div>

